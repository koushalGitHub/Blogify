<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')   %>
    <title>Blog page</title>
</head>
<body>
    <%- include('./partials/nav')   %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px" alt="">
        <p><%= blog.body %></p>
    </div>
    <div class="container">
        <img src="<%= blog.createdBy.profileImageURL%>" width="100px" alt=""><%= blog.createdBy.fullName %>
    </div>
   <div class="container mt-4">
        <h1>Comments  (<%= comment.length %>)</h1>
        <% if(locals.user){  %>
            <form action="/blog/comment/<%= blog.id %>" method="POST">
               
                <div class="mb-3">
                  <input type="text" class="form-control" name="comment" id="exampleInputEmail1" placeholder="Enter Your Comments">
                  
                </div>               
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>


              
        <% } %>
        <div class="mt-4">
            <% comment.forEach(comment=>{   %>
                <div class="container">
             <img src="<%= comment.createdBy.profileImageURL%>" width="35px" alt=""><%= comment.createdBy.fullName %>
             <pre><%= comment.content %></pre> 
                </div>
         <%   }) %>
          </div> 
        
   </div>
    <%- include('./partials/scripts')   %>
</body>
</html>